        mc:Ignorable="d"
        Title="Async" Height="480" Width="480" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button 
            Click="ReadData"
            Content="Leer Datos"
            HorizontalAlignment="Left"
            Name="btnReadData"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            Width="100"/>
        <Button 
            Click="ShowTime"
            Content="Mensaje"
            HorizontalAlignment="Left"
            Name="btnShowTime"
            Margin="10,35,0,0"
            VerticalAlignment="Top"
            Width="100"/>
        <ListBox 
            HorizontalAlignment="Left"
            Height="429"
            Name="lbxFiles"
            Margin="115,10,0,0"
            VerticalAlignment="Top"
            Width="347"/>

    </Grid>
</Window>
