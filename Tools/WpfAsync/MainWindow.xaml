        xmlns:local="clr-namespace:WpfAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="103.955" Width="127.772" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button 
            Click="OpenNoAsyncWindow"
            Content="No Async"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
